from django.contrib.auth.models import User
from django.views.generic.edit import DeleteView
from django.urls import reverse_lazy
from django.contrib.auth.mixins import UserPassesTestMixin

class DeleteUserView(UserPassesTestMixin, DeleteView):
    # The model to delete is the User model
    model = User
    # Redirect to the home page after successful deletion (define 'home' in urls.py)
    success_url = reverse_lazy('home') 
    # Template for the deletion confirmation page
    template_name = 'account/user_confirm_delete.html' 

    def get_object(self, queryset=None):
        # Crucially, restrict the object being deleted to the currently logged-in user
        return self.request.user

    def test_func(self):
        # Only authenticated users can access this view
        return self.request.user.is_authenticated
